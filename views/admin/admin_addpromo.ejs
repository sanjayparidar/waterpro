<div class="container">
  <div class="col-md-4 col-md-offset-4">
  <h3>Add New Product</h3>
  <hr />
  <form action="/" method="post" enctype="multipart/form-data">
  	<div class="form-group">
  		<label>promo-name</label>
  		<input type="text" placeholder="Promo-Name" name="promoname" class="form-control">

  	</div>
    
    <div class="form-group">
      <label>discount</label>
      <input type="text" placeholder="Product Price" name="discount" class="form-control">

    </div>
    
    <div class="form-group">
      <label>start-date</label>
      <input type="date" placeholder="Discount" name="startdate" class="form-control">

    </div>
     <div class="form-group">
      <label>end-date</label>
      <input type="date" placeholder="Discount" name="enddate" class="form-control">

    </div>
  	<input type="submit" value="Add" class="btn btn-primary">
  </form>
</div>
<%= message %>

</div>